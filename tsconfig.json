{
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "inlineSources": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ES2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "paths": {
      "fakes/*": ["fakes/*"],
      "server/*": ["src/server/*"],
      "src/*": ["src/*"],
      "ui/*": ["src/ui/*"]
    },
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "customMatcher": "\\.s?css$",
          "classnameTransform": "dashes",
          "rendererOptions": {
            "sass": {
              "includePaths": [
                "src/ui/"
              ]
            }
          }
        }
      }
    ],
    "resolveJsonModule": true,
    "rootDir": "./",
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es6"
  },
  "include": [
    "fakes",
    "fakes/**/*.json",
    "src",
    "src/**/*.json"
  ]
}
